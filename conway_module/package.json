{
	"name": "conway_module",
	"version": "1.0.0",
	"description": "A module for playing Conway's Game of Life in a browser.",
	"private": true,
	"main": "./lib/index.js",
	"scripts": {
		"build": "webpack --config webpack.prod.js",
		"build:dev": "webpack --config webpack.dev.js",
		"cov": "./node_modules/.bin/istanbul cover --report text --report html _mocha",
		"docs": "./node_modules/.bin/jsdoc -r --package ./package.json --destination ./docs --readme ./../README.md ./lib",
		"profile": "NODE_ENV=test NODE_PATH=. node_modules/mocha/bin/mocha -f 'Profiling' --prof -t 100000",
		"start": "webpack-dev-server --open --config webpack.dev.js",
		"test": "NODE_ENV=test NODE_PATH=. node_modules/mocha/bin/mocha"
	},
	"author": "Samuel D. Holloway",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/sholloway/conways_game.git"
	},
	"devDependencies": {
		"canvas": "2.6.0",
		"chai": "4.2.0",
		"istanbul": "0.4.5",
		"jsdoc": "3.6.3",
		"mocha": "6.2.0",
		"sinon": "7.4.1",
		"webpack": "4.39.2",
		"webpack-cli": "3.3.7",
		"webpack-dev-server": "3.8.0",
		"webpack-merge": "4.2.1",
		"worker-loader": "2.0.0"
	}
}
